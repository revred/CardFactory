@page "/contact"

<h2 class="section-title">Contact Us</h2>

<div class="content-section contact-form-container">
    <EditForm Model="@contactModel" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="name">Name</label>
            <InputText id="name" class="form-control" @bind-Value="contactModel.Name" />
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <InputText id="email" type="email" class="form-control" @bind-Value="contactModel.Email" />
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <InputTextArea id="message" class="form-control" rows="5" @bind-Value="contactModel.Message" />
        </div>

        <div></div>

        <button type="submit" class="btn btn-primary">Send Message</button>
    </EditForm>
</div>

@code {
    private ContactModel contactModel = new();

    private void HandleValidSubmit()
    {
        // TODO: wire up email or API call
        Console.WriteLine($"Contact form submitted by {contactModel.Name}");
        contactModel = new(); // reset form
    }

    public class ContactModel
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Message { get; set; } = "";
    }
}
