@page "/email-verification"

<div class="login-container">
    <div class="login-form">
        <h2>Email Sent 📬</h2>
        <p class="subtitle">
            We've sent you an email with a verification link. Please check your inbox and confirm your email to complete your registration.
        </p>

        <div class="signup-link">
            Already verified? <a href="/login">Sign in</a>
        </div>
    </div>
</div>
